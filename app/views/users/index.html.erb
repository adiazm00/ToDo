<%= render "collections/sidebar", collections: @collections, collection: @collection, user: @user %>
<p>
<h1>Users</h1>
<ul>
<% i = 0%>
<% @users.each do |user| %>
    <%strAux = ''%>
    <%if user.email != 'admin@admin.com'%>
    <%if user.email == @user.email%> <%strAux = ' (Me)'%><%end%>
    <% i = i + 1%>
        <%= link_to image_tag("https://cdn-icons-png.flaticon.com/64/149/149071.png") + " " +user.email + strAux, user_path(user), :style => "font-size: 1.3em;"%><br><br>
    <% end %>
<% end %>
</ul>
<%if i == 0%>
<p>No users</p>
<%end%>
