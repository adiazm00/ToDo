 <%= form_with model: collection do |form| %>
  <p>
  <div id="profile-edit-area">
    <table style="width: 100%;">
      <tbody>
        <tr>
          <td><h5 class="edit-title"><%= form.label :title %>:</h5></td>
          <td><input type="text" class="profileInputBox" <%= form.text_field :title %></td>
          <% collection.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </tr>
        <tr>
          <td><h5 class="edit-title"><%= form.label :description %>:</h5></td>
          <td><textarea oninput="auto_grow(this)" class="profileInputBox-description"<%= form.text_area :description %></textarea>
          <% collection.errors.full_messages_for(:description).each do |message| %>
            <div><%= message %></div>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  <p>
  <div class="btn-submit">
    <%= form.submit :class =>"btn_form" %>
  </div>
  <% end %>
