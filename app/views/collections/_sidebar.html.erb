</head>

    <div class="wrapper" id="wrapperFirst">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><%= link_to 'Collection Management', root_path%></h3>
            </div>

            <% if Current.user %>
            <ul class="list-unstyled components">
                <li class="active">
                    <% i = 0 %>
                    <% @collections.each do |collection| %>
                    <% i = i + 1 %>
                        <div id="collection_info">
                            <div id="collection_title"><%= link_to collection.title, collection %></div>
                            <% if Task.tasks_count(collection) < 10%>
                                <b id="counter"><img id="img_counter" src="https://humantechnopole.it/wp-content/themes/human-technopole/assets/img/icons/circle-dark-blue.svg"><%= Task.tasks_count(collection)%> </b>
                            <% else%>
                                <b id="counter"><img id="img_counter9" src="https://humantechnopole.it/wp-content/themes/human-technopole/assets/img/icons/circle-dark-blue.svg">+9</b>
                            <%end%>
                        </div>
                        <% if i != @collections.length%>
                            <hr style="border: 0; height: 1px; background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0));">
                        <% end %>
                    <% end %>
                    <% if i == 0 %>
                        <div id="task_name" style="margin-left: 20px;">No collections yet</div>
                    <% end %>
                </li>
            </ul>
            
            <ul class="list-unstyled components">
                <div style="display: flex; margin-top:-5px">
                    <li>
                        <%= link_to image_tag("https://cdn-icons-png.flaticon.com/32/1802/1802589.png") + " New Collection", new_user_collection_path(@user)%>
                    </li>
                </div>
            </ul>
            <ul class="list-unstyled components">
                <div style="display: flex; margin-top:-5px">
                    <li>
                        <% if (@user.pending_invitations.length + @user.pending_invitations_collection.length) > 0 %>
                            <% cadenaAux = '*' %>
                        <% else %>
                            <% cadenaAux = '' %>
                        <% end %>
                        <%= link_to image_tag("https://cdn-icons-png.flaticon.com/32/476/476761.png")+" Friends "+cadenaAux, search_user_path %>
                    </li>
                </div>
            </ul>
            <ul class="list-unstyled components">
                <div>
                    <li style="display: flex; margin-top:-5px;">
                        <%= link_to image_tag("https://cdn-icons-png.flaticon.com/32/3602/3602215.png")+' Notifications', '/index_notifications' %>
                            <% if @user.pending_notifications.length > 0 %>
                                <% if @user.pending_notifications.length < 10 %>
                                    <b id="not_counter"><img id="img_counter" src="https://humantechnopole.it/wp-content/themes/human-technopole/assets/img/icons/circle-dark-blue.svg"><%= @user.pending_notifications.length%> </b>
                                <% else%>
                                    <b id="not_counter"><img id="img_counter9" src="https://humantechnopole.it/wp-content/themes/human-technopole/assets/img/icons/circle-dark-blue.svg">+9</b>
                                <%end%>
                            <%end%>
                    </li>
                </div>
            </ul>
            <% if Current.user.role == 'admin' %>
                <ul class="list-unstyled components">
                    <li style="margin-bottom:5px">
                        <%= link_to image_tag("https://cdn-icons-png.flaticon.com/32/599/599928.png")+ " View all users", users_path %>
                    </li>
                </ul>
            <%end%>
            <ul class="list-unstyled components">
                <li>
                    <div id="user_info">
                       <img id="img_add" src="https://cdn-icons-png.flaticon.com/512/149/149071.png"><div style="display: flex; margin-left:10px; padding-top:10px"><%=Current.user.email.split('@')[0]%></div>
                        <a href="#CollectionSubmenuAux" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"></a>
                    </div>
                    <ul class="collapse list-unstyled " id="CollectionSubmenuAux">
                        <% if Current.user.email != 'admin@admin.com' %>
                            <div id="task_name"><li><%= link_to "Edit Password", edit_password_path, :style=>"padding: 10px 0;" %></li></div>
                        <% end %>
                            <div id="task_name"><li><%= link_to "Logout", logout_path, :style=>"padding: 10px 0", data: {
                                turbo_method: :delete,
                                turbo_confirm: "Are you sure?"
                            } %></li></div>
                        <% if Current.user.email != 'admin@admin.com' %>
                            <div id="task_name"><li><%= link_to "Destroy Account", user_path(@user), :style=>"padding: 10px 0", data: {
                                        turbo_method: :delete,
                                        turbo_confirm: "Are you sure?"
                                        } %></li></div>
                        <% end %>
                    </ul>
                 </li>
            </ul>
            <% else %>
                <ul class="list-unstyled components">You must be logged in to use the application</ul>
            <% end %>
        </nav>

        <!-- Page Content  -->
        <div id="content">
          <button type="button" id="sidebarCollapse" class="btn btn-info">
           <i class="fas fa-align-left"></i>
          </button>